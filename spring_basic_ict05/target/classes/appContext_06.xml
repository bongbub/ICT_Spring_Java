<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans.xsd">

	
	<!-- 생성자 호출 : 매개변수 생성자 => DI(Dependency Injection - Setter Injection )) -->
	<bean id="sams" class="spring.mvc.basic_ict05.ch06.SamsungTV" >
		<property name="sony" ref="sony" />
		<property name="brand" value="삼성" />
		<property name="price" value="12000" />
	</bean>

	<bean id="sony" class="spring.mvc.basic_ict05.ch06.SonySpeaker" />

</beans>
