<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans.xsd">

	
	<!-- 디폴트 생성자를 통한 호출 -->
	<bean id="sam" class="spring.mvc.basic_ict05.ch04.SamsungTV" />
	
	
	<!-- 자바에서 매개변수 생성자 호출하던 방법 -->
	<!-- SamsungTV sam = new SamsungTV(sony, "삼성", 1200000); -->
	
	<!-- 생성자 호출 : 매개변수 생성자 -->
	<bean id="sam" class="spring.mvc.basic_ict05.ch04.SamsungTV" >
		<constructor-arg index="0" value="sony 주소값" />		<!-- index는 생략 가능 -->
		<constructor-arg value="삼성"/>
		<constructor-arg value="120000"/>
	</bean>
	

</beans>
