package spring.mvc.basic_ict05.ch01;

import org.springframework.context.support.GenericXmlApplicationContext;

public class Main {
	public static void main(String[] args) {
		System.out.println("[ 방법 1) 자바에서 인스턴스 생성 ]");
		
		// 방법 1. new 연산자를 이용해서 객체 생성
		SamsungTV tv = new SamsungTV();
		tv.powerOn();
		tv.powerOff();
		tv.volumeUp();
		tv.volumeDown();
		
		// 실행 -> Java Application
		
		System.out.println("[ 방법 2) XML에서 인스턴스 생성 후 , IoC 컨테이너 이용해서 로딩 ]");
		
		
		
		// GenericXmlApplicationContext ==> 파일 시스템이나 클래스 경로에 있는 XML 설정 파일을 로딩하여 구동하는 컨테이너.
		new GenericXmlApplicationContext("appContext_01.xml");  	// 해당 파일을 로딩 하겠다
		
		
		
	}
}
